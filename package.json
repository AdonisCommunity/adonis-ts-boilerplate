{
  "name": "create-adonis-ts-app",
  "version": "4.2.3",
  "description": "Boilerplate to create a new AdonisJs typescript project",
  "main": "build/index.js",
  "files": [
    "build/bin",
    "build/src",
    "build/Tasks",
    "build/templates",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "eslint . --ext=.ts",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && copyfiles \"templates/**/*\" build",
    "build": "npm run compile",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs-community/create-adonis-ts-app",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build"
  },
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@types/node": "^18.15.1",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "doctoc": "^2.2.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "japa": "^4.0.0",
    "mrm": "^4.1.14",
    "np": "^7.6.3",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bin": {
    "create-adonis-ts-app": "build/bin/run.js"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "dependencies": {
    "@adonisjs/application": "^5.3.0",
    "@adonisjs/sink": "^5.4.3",
    "@poppinss/prompts": "^2.0.2",
    "@poppinss/utils": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "cli-width": "^3.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "getopts": "^2.3.0",
    "gradient-string": "^2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdonisCommunity/adonis-ts-boilerplate.git"
  },
  "keywords": [
    "adonisjs",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/AdonisCommunity/adonis-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/AdonisCommunity/adonis-ts-boilerplate#readme",
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
