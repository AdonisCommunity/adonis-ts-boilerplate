{
  "name": "create-adonis-ts-app",
  "version": "3.0.2",
  "description": "Boilerplate to create a new AdonisJs typescript project",
  "main": "build/index.js",
  "files": [
    "build/bin",
    "build/src",
    "build/Tasks",
    "build/templates",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "eslint . --ext=.ts",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && copyfiles \"templates/**/*\" build",
    "build": "npm run compile",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json AdonisCommunity/create-adonis-ts-app",
    "format": "prettier --write ."
  },
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^3.0.0",
    "@adonisjs/require-ts": "^2.0.3",
    "@types/node": "^14.14.35",
    "commitizen": "^4.2.3",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "doctoc": "^2.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-adonis": "^1.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "github-label-sync": "^2.0.0",
    "husky": "^5.2.0",
    "japa": "^3.1.1",
    "mrm": "^2.6.1",
    "np": "^7.4.0",
    "npm-audit-html": "^1.5.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js",
      "pre-commit": "npm audit --production --json | ./node_modules/.bin/npm-audit-html && git add npm-audit.html"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bin": {
    "create-adonis-ts-app": "build/bin/run.js"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "dependencies": {
    "@adonisjs/application": "^5.0.0",
    "@adonisjs/sink": "^5.1.1",
    "@poppinss/prompts": "^1.2.1",
    "@poppinss/utils": "^3.0.5",
    "@types/fs-extra": "^9.0.8",
    "cli-width": "^3.0.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "getopts": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdonisCommunity/adonis-ts-boilerplate.git"
  },
  "keywords": [
    "adonisjs",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/AdonisCommunity/adonis-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/AdonisCommunity/adonis-ts-boilerplate#readme",
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
