{
  "name": "create-adonis-ts-app",
  "version": "2.0.0",
  "description": "Boilerplate to create a new AdonisJs typescript project",
  "main": "build/index.js",
  "files": [
    "build/bin",
    "build/src",
    "build/tasks",
    "build/templates",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "eslint . --ext=.ts",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && copyfiles \"templates/**/*\" build",
    "build": "npm run compile",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^6.3.5",
    "@adonisjs/mrm-preset": "^2.3.0",
    "@types/node": "^13.13.4",
    "commitizen": "^4.0.4",
    "copyfiles": "^2.2.0",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-adonis": "^1.0.9",
    "husky": "^4.2.5",
    "japa": "^3.0.1",
    "mrm": "^2.2.1",
    "np": "^6.2.3",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bin": {
    "create-adonis-ts-app": "build/bin/run.js"
  },
  "dependencies": {
    "@adonisjs/application": "^1.3.12",
    "@adonisjs/sink": "^3.0.2",
    "@poppinss/prompts": "^1.0.9",
    "@poppinss/utils": "^2.2.6",
    "cli-width": "^3.0.0",
    "fs-extra": "^9.0.0",
    "getopts": "^2.2.5",
    "ora": "^4.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdonisCommunity/adonis-ts-boilerplate.git"
  },
  "keywords": [
    "adonisjs",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/AdonisCommunity/adonis-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/AdonisCommunity/adonis-ts-boilerplate#readme",
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
